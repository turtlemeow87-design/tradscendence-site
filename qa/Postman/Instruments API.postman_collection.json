      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "pm.test(\"Response is JSON\", function () {\r",
              "    pm.response.to.be.json;\r",
              "});\r",
              "\r",
              "pm.test(\"Featured instruments is an array\", function () {\r",
              "    const json = pm.response.json();\r",
              "    pm.expect(json).to.be.an(\"array\");\r",
              "});\r",
              "\r",
              "pm.test(\"Each featured instrument has required fields\", function () {\r",
              "    const json = pm.response.json();\r",
              "    json.forEach(function(instrument) {\r",
              "        pm.expect(instrument).to.have.property(\"name\");\r",
              "        pm.expect(instrument).to.have.property(\"slug\");\r",
              "        pm.expect(instrument).to.have.property(\"image_url\");\r",
              "        pm.expect(instrument).to.have.property(\"audio_teaser\");\r",
              "    });\r",
              "});"
