        Explore more Arabic Oud →
      </a>
    </div>

  </div>
</section>


<!-- Client-only audio logic (safe for SSR) -->
<script is:inline>
  // Toggle play/pause on click of any teaser card.
  document.addEventListener('click', (e) => {
    const card = e.target.closest('.js-teaser-card');
    if (!card) return;

    const audio = card.querySelector('audio.teaser');
    if (!audio) return;

    // Pause & reset all *other* teasers
    document.querySelectorAll('audio.teaser').forEach((a) => {
      if (a !== audio) {
        try { a.pause(); a.currentTime = 0; } catch {}
      }
    });

    // Start/stop this one
    if (audio.paused) {
      audio.muted = false;
      audio.volume = 1;
      audio.play().catch((err) => console.warn('play failed:', err));
    } else {
      audio.pause();
    }
  });

  // Keep the icon in sync with the audio state
  const attachIconSync = (a) => {
    const card = a.closest('.js-teaser-card');
    const icon = card?.querySelector('.play-icon');
    if (!icon) return;
    a.addEventListener('play',  () => icon.textContent = '❚❚');
    a.addEventListener('pause', () => icon.textContent = '▶︎');
    a.addEventListener('ended', () => { icon.textContent = '▶︎'; a.currentTime = 0; });
  };
  document.querySelectorAll('audio.teaser').forEach(attachIconSync);
</script>


</BaseLayout>